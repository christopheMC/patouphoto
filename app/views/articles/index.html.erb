<div class="container">
  <div class="row">
    <div class="article col-sm-12">
        <div class="d-flex flex-column align-content-center">
          <% @articles.each do |article| %>
            <%= link_to article_path(article) do %>
              <% if article.photos.count > 0 %>
                <div class="article-info mb-3">
                  <div class="d-flex justify-content-between">
                      <%= cl_image_tag article.photos.first.key, height: 400, crop: :fill %>
                  </div>
                  <div class="article-title border-bottom">
                    <p class="flex-grow-1 pl-2 pt-2"><%= article.title %></p>
                    <p class="pr-2 pt-2">Publié le <%= article.created_at %></p>
                  </div>
                  <div class="pl-2">
                    <p><%= article.rich_body %></p>
                  </div>
                </div>
              <% else %>
                <div class="article-info-bis mb-3">
                  <div class="article-title border-bottom">
                    <p class="flex-grow-1 pl-2 pt-2"><%= article.title %></p>
                    <p class="pr-2 pt-2">Publié le <%= article.created_at %></p>
                  </div>
                  <div class="pl-2">
                    <p><%= article.rich_body %></p>
                  </div>
                </div>
              <% end %>
            <% end %>
          <% end %>
        </div>
    </div>
  </div>
</div>
