<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <div class="article">
        <div>
          <% @articles.each do |article| %>
              <%= link_to article_path(article) do %>
                <div class="article-info mb-3">
                  <div class="d-flex justify-content-between">
                    <% article.photos.each do |photo| %>
                      <%= cl_image_tag photo.key, width: 445, height: 240, crop: :fill %>
                    <% end %>
                  </div>
                  <div class="article-title border-bottom">
                    <p class="flex-grow-1 pl-2 pt-2"><%= article.title %></p>
                    <p class="pr-2 pt-2">Publi√© le <%= article.created_at %></p>
                  </div>
                  <div class="pl-2">
                    <p><%= article.rich_body %></p>
                  </div>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
